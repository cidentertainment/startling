#!/usr/bin/env ruby

class BranchChanges
  def initialize(filepath)
    @filepath = filepath
  end

  def story_id
    change_text[%r(story/show/(\d+)), 1]
  end

  private

  attr_reader :filepath

  def change_text
    @change_text ||= File.open(full_path, &:readline)
  end

  def full_path
    File.join(root_path, filepath)
  end

  def root_path
    @root_path ||= %x[git rev-parse --show-toplevel].chomp
  end
end

changes = BranchChanges.new('BRANCH_CHANGES.md')
puts changes.story_id
